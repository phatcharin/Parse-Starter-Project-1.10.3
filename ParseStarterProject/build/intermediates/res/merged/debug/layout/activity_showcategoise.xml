<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/edCatname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:hint="Category name"
        android:gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/bntAddCat"
        android:layout_alignBottom="@+id/edCatname"
        android:layout_toRightOf="@+id/edCatname"
        android:layout_toEndOf="@+id/edCatname"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/edCatname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="20dp"
        android:touchscreenBlocksFocus="true"
        android:cacheColorHint="#ff560d"
        android:textColor="#a8ff4e"
        android:textFilterEnabled="false" />

</RelativeLayout><!-- From: file:/E:/2015/Project/testLogin2/Parse-Starter-Project-1.10.3/ParseStarterProject/src/main/res/layout/activity_showcategoise.xml -->